{
  "name": "mouse-ramrod-web",
  "version": "1.0.4",
  "private": true,
  "description": "Deadly game of mouse and ramrod",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "start": "webpack serve --config webpack_configs/webpack.config.js --mode development --color",
    "android": "webpack --config webpack_configs/android.webpack.config.js --mode production",
    "build": "webpack --config webpack_configs/production.webpack.config.js --mode production",
    "style": "npx eslint . -c linters/eslint.config.js",
    "style:fix": "npx eslint . -c linters/eslint.config.js --fix",
    "style2": "npx stylelint --config linters/.stylelintrc.json \"src/**/*.css\"",
    "style2:fix": "npx stylelint --config linters/.stylelintrc.json \"src/**/*.css\" --fix",
    "test": "ava",
    "updates": "npx ncu",
    "updates:fix": "npx ncu -u && npm install"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^4.0.0",
    "ava": "^6.2.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "html-inline-css-webpack-plugin": "^1.11.2",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-check-updates": "^17.1.14",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "terser-webpack-plugin": "^5.3.11",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
